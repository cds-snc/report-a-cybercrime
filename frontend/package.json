{
  "name": "report-a-cybercrime",
  "version": "0.0.1",
  "license": "MIT",
  "repository": "github:cds-snc/report-a-cybercrime",
  "scripts": {
    "dev": "razzle start",
    "build": "lingui compile && razzle build",
    "heroku-postbuild": "NODE_ENV=production lingui extract && lingui compile && razzle build",
    "dbg": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test": "jest",
    "lint": "eslint 'src/**/*.js'",
    "start": "NODE_ENV=production node build/server.js",
    "add-locale": "lingui add-locale",
    "extract": "lingui extract",
    "compile": "lingui compile",
    "clean": "lingui extract --clean",
    "upgrade-interactive": "npm-check --update",
    "check-translations": "lingui extract && node utils/checkTranslations.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@cdssnc/logdriver": "0.0.2",
    "@emotion/core": "^10.0.9",
    "@emotion/styled": "^10.0.9",
    "@lingui/react": "^2.7.4",
    "@reach/component-component": "^0.1.2",
    "@reach/router": "^1.2.1",
    "apollo-cache-inmemory": "^1.4.3",
    "apollo-client": "^2.4.13",
    "apollo-link-error": "^1.1.2",
    "apollo-link-http": "^1.5.7",
    "apollo-link-state": "^0.4.2",
    "cds-size-plugin": "^1.1.3",
    "clean-element": "^1.0.3",
    "clean-tag": "^2.0.3",
    "emotion": "^10.0.9",
    "emotion-server": "^10.0.9",
    "emotion-theming": "^10.0.9",
    "express": "^4.16.4",
    "express-request-language": "^1.1.15",
    "final-form": "^4.12.0",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.0",
    "razzle": "^3.0.0-alpha.0",
    "react": "^16.6.3",
    "react-apollo": "^2.3.2",
    "react-dom": "^16.6.3",
    "react-final-form": "^4.1.0",
    "react-ga": "^2.5.7",
    "react-helmet": "^5.2.0",
    "react-markdown": "^4.0.6",
    "styled-system": "^4.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-regenerator": "^7.3.4",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@lingui/babel-preset-react": "^2.7.4",
    "@lingui/cli": "^2.7.4",
    "@lingui/macro": "^2.7.4",
    "acorn": "^6.1.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.4.0",
    "babel-plugin-emotion": "^10.0.9",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^24.4.0",
    "jest-dom": "^3.1.2",
    "jest-emotion": "^10.0.9",
    "npm-check": "^5.9.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "prop-types": "^15.7.2",
    "react-testing-library": "^6.0.0",
    "supertest": "^4.0.0",
    "unfetch": "^4.1.0",
    "waait": "^1.0.4"
  },
  "lingui": {
    "srcPathIgnorePatterns": [
      "/node_modules/",
      "build"
    ],
    "sourceLocale": "en",
    "format": "minimal"
  },
  "jest": {
    "verbose": true,
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
