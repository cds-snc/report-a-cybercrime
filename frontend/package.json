{
  "name": "report-a-cybercrime",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "razzle start",
    "build": "razzle build",
    "heroku-postbuild": "razzle build",
    "test": "jest",
    "lint": "eslint 'src/**/*.js'",
    "start": "NODE_ENV=production node build/server.js",
    "add-locale": "lingui add-locale",
    "extract": "lingui extract",
    "compile": "NODE_ENV=development lingui compile",
    "clean": "lingui extract --clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@cdssnc/gcui": "0.0.31",
    "@lingui/react": "^2.7.2",
    "@reach/component-component": "^0.1.1",
    "@reach/router": "^1.2.1",
    "apollo-cache-inmemory": "^1.3.11",
    "apollo-client": "^2.4.7",
    "apollo-link-error": "^1.1.2",
    "apollo-link-http": "^1.5.7",
    "apollo-link-state": "^0.4.2",
    "emotion": "^9.2.12",
    "emotion-server": "^9.2.12",
    "express": "^4.16.4",
    "express-request-language": "^1.1.15",
    "final-form": "^4.11.0",
    "govuk-react": "^0.3.1",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "razzle": "^3.0.0-alpha.0",
    "react": "^16.6.3",
    "react-apollo": "^2.3.2",
    "react-dom": "^16.6.3",
    "react-emotion": "^9.2.12",
    "react-final-form": "^4.0.2",
    "react-helmet": "^5.2.0",
    "react-ga": "^2.5.6"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@lingui/babel-preset-react": "^2.7.2",
    "@lingui/cli": "^2.7.2",
    "@lingui/macro": "^2.7.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "supertest": "^3.3.0",
    "unfetch": "^4.0.1"
  },
  "lingui": {
    "srcPathIgnorePatterns": [
      "/node_modules/",
      "build"
    ],
    "sourceLocale": "en",
    "format": "lingui"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
