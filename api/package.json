{
  "name": "rcmp-prototype-api",
  "version": "1.0.0",
  "description": "A Basic API",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "print-schema": "bin/print-schema > schema.graphql && git add ./schema.graphql",
    "lint": "eslint src/**",
    "dbg": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "start": "node index.js",
    "upgrade-interactive": "npm-check --update",
    "minikube": "kustomize build manifests/overlays/minikube | kubectl apply -f -",
    "delete-minikube": "kustomize build manifests/overlays/minikube | kubectl delete -f -"
  },
  "author": "CDS",
  "license": "MIT",
  "repository": "github:cds-snc/report-a-cybercrime",
  "dependencies": {
    "arangojs": "^6.12.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.1.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.5.8",
    "graphql-custom-types": "^1.5.1",
    "graphql-upload": "^8.1.0",
    "lodash.unionby": "^4.8.0",
    "minio": "^7.0.12",
    "moment": "^2.24.0",
    "moment-range": "^4.0.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "npm-check": "^5.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "setupFilesAfterEnv": [
      "<rootDir>/setUpJest.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run print-schema"
    }
  }
}
